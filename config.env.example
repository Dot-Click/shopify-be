# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ecomprotect"

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Email Configuration (Brevo)
BREVO_API_KEY="your-brevo-api-key"
BREVO_SENDER_EMAIL="noreply@ecomprotect.com"
BREVO_SENDER_NAME="eComProtect"

# Operations Team Configuration
ECP_OPS_EMAIL="ops@ecomprotect.com"
ECP_ACCOUNT_MANAGER_EMAIL="am@ecomprotect.com"

# GoCardless Configuration
GOCARDLESS_ACCESS_TOKEN="your-gocardless-access-token"
GOCARDLESS_ENVIRONMENT="sandbox" # or "live"
GOCARDLESS_WEBHOOK_SECRET="your-webhook-secret"

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN="http://localhost:5173" # Frontend URL
SESSION_SECRET="your-session-secret"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# API Keys for External Services
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# File Upload Limits
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=false

# Plan Pricing (in GBP)
STARTER_PLAN_PRICE=29.99
GROWTH_PLAN_PRICE=79.99
PRO_PLAN_PRICE=199.99
ENTERPRISE_PLAN_PRICE=0 # Custom pricing

# Package Pricing
ECP_INSIGHT_PRICE=0 # Included in plan
ECP_VISION_PRICE=19.99 # Additional per month
ECP_SHIELD_PRICE=39.99 # Additional per month

# Risk Detection Defaults
DEFAULT_LOST_PARCEL_THRESHOLD=3
DEFAULT_TIME_PERIOD_MONTHS=12
DEFAULT_MATCH_SENSITIVITY="medium"

# Report Cache Settings
REPORT_CACHE_DURATION_HOURS=24
MAX_CACHED_REPORTS=1000

# Audit Log Settings
AUDIT_LOG_RETENTION_DAYS=365
SENSITIVE_FIELDS="password,api_key,secret"

# MFA Settings
MFA_TOKEN_EXPIRY_MINUTES=10
MAX_MFA_ATTEMPTS=3
MFA_LOCKOUT_DURATION_MINUTES=30

# Order Processing
AUTO_FLAG_ENABLED=true
MANUAL_REVIEW_THRESHOLD=0.8
RISK_SCORE_THRESHOLD=75

# Shopify Integration
SHOPIFY_WEBHOOK_TIMEOUT=5000
SHOPIFY_API_RATE_LIMIT=2
SHOPIFY_ORDER_SYNC_ENABLED=true

# Customer Risk Assessment
RISK_ASSESSMENT_ENABLED=true
FUZZY_MATCHING_ENABLED=true
IP_RISK_SCORING_ENABLED=true
GEOGRAPHIC_RISK_ENABLED=true

# Email Templates
EMAIL_TEMPLATE_PATH="./src/templates/emails"
WELCOME_EMAIL_TEMPLATE="welcome.html"
APPROVAL_EMAIL_TEMPLATE="approval.html"
REJECTION_EMAIL_TEMPLATE="rejection.html"
RISK_ALERT_TEMPLATE="risk_alert.html"

# Development Settings
DEBUG_MODE=false
MOCK_PAYMENTS=false
MOCK_EMAILS=false
SKIP_EMAIL_VERIFICATION=false

# Testing
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/ecomprotect_test"
TEST_EMAIL_DOMAIN="@test.com"
TEST_PHONE_PREFIX="+44"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="ecomprotect-backups"

# Compliance and Legal
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555 # 7 years
PRIVACY_POLICY_URL="https://ecomprotect.com/privacy"
TERMS_OF_SERVICE_URL="https://ecomprotect.com/terms"

# Support and Contact
SUPPORT_EMAIL="support@ecomprotect.com"
SUPPORT_PHONE="+44 800 123 4567"
SUPPORT_HOURS="9:00 AM - 6:00 PM GMT" 